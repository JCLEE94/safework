# Production Environment Configuration
# Copy this file and update with actual production values

# Database Configuration
DATABASE_URL=postgresql://admin:strong_production_password@postgres:5432/health_management
POSTGRES_USER=admin
POSTGRES_PASSWORD=strong_production_password
POSTGRES_DB=health_management

# Redis Configuration
REDIS_URL=redis://:redis_production_password@redis:6379/0
REDIS_PASSWORD=redis_production_password

# Security
JWT_SECRET=your-very-long-and-secure-production-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# API Keys
API_KEY_SALT=production-api-key-salt-here

# Application Settings
DEBUG=false
LOG_LEVEL=WARNING
TZ=Asia/Seoul

# CORS Settings
CORS_ORIGINS=["https://safeworkpro.com", "https://www.safeworkpro.com"]

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_UPLOAD_EXTENSIONS=[".pdf", ".doc", ".docx", ".xls", ".xlsx", ".jpg", ".png"]

# External Services (Optional)
SENTRY_DSN=
SLACK_WEBHOOK_URL=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090