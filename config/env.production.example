# ======================================
# SafeWork Pro 운영 환경 설정 예제
# ======================================
# 이 파일을 .env로 복사하여 사용하세요: cp config/env.production.example .env

ENVIRONMENT=production

# 데이터베이스 설정 (단일 컨테이너 내부)
POSTGRES_USER=admin
POSTGRES_PASSWORD=safework123
POSTGRES_DB=health_management
DATABASE_URL=postgresql://admin:safework123@localhost:5432/health_management

# Redis 설정 (단일 컨테이너 내부)
REDIS_URL=redis://localhost:6379/0

# 보안 설정
JWT_SECRET=safework-pro-secret-key-2024
DEBUG=false
LOG_LEVEL=INFO
TZ=Asia/Seoul
PORT=3001

# CORS 설정 (운영 도메인)
CORS_ORIGINS=["https://safework.jclee.me", "http://192.168.50.215:3001"]

# 레이트 리미팅 설정
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# 파일 업로드 설정
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_UPLOAD_EXTENSIONS=[".pdf", ".doc", ".docx", ".xls", ".xlsx", ".jpg", ".png"]

# 외부 서비스 (선택사항)
SENTRY_DSN=
SLACK_WEBHOOK_URL=