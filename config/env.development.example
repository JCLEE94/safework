# ======================================
# SafeWork Pro 개발 환경 설정 예제
# ======================================
# 이 파일을 .env로 복사하여 사용하세요: cp config/env.development.example .env

ENVIRONMENT=development

# 데이터베이스 설정 (개발용 - 별도 컨테이너)
POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_DB=health_management
DATABASE_URL=postgresql://admin:password@postgres:5432/health_management

# Redis 설정 (개발용 - 별도 컨테이너)
REDIS_URL=redis://redis:6379/0

# 보안 설정
JWT_SECRET=dev-secret-key-do-not-use-in-production
DEBUG=true
LOG_LEVEL=DEBUG
TZ=Asia/Seoul
PORT=8000

# CORS 설정 (개발 도메인)
CORS_ORIGINS=["http://localhost:3001", "http://localhost:3000", "http://localhost:5173"]

# 레이트 리미팅 설정 (개발용 - 더 관대하게)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# 파일 업로드 설정
MAX_UPLOAD_SIZE=50485760  # 50MB (개발용)
ALLOWED_UPLOAD_EXTENSIONS=[".pdf", ".doc", ".docx", ".xls", ".xlsx", ".jpg", ".png", ".txt"]

# 개발용 디버깅
SQLALCHEMY_ECHO=true
UVICORN_RELOAD=true