# ======================================
# SafeWork Pro 환경 설정
# ======================================

# 환경 구분 (production/development/test)
ENVIRONMENT=production

# 데이터베이스 설정
POSTGRES_USER=admin
POSTGRES_PASSWORD=safework123
POSTGRES_DB=health_management
DATABASE_URL=postgresql://admin:safework123@localhost:5432/health_management

# Redis 설정
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# 보안 설정
JWT_SECRET=safework-pro-secret-key-2024
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# API 키 설정
API_KEY_SALT=your-api-key-salt-here

# 애플리케이션 설정
DEBUG=false
LOG_LEVEL=INFO
TZ=Asia/Seoul
PORT=3001

# 빌드 시간 (자동 설정)
BUILD_TIME=

# CORS Settings
CORS_ORIGINS=["http://localhost:3001", "http://localhost:3000"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_UPLOAD_EXTENSIONS=[".pdf", ".doc", ".docx", ".xls", ".xlsx", ".jpg", ".png"]

# Email Settings (Optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@safeworkpro.com

# External Services (Optional)
SENTRY_DSN=
SLACK_WEBHOOK_URL=