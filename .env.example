# SafeWork Pro Environment Configuration
# 운영 환경에서는 이 값들을 안전하게 설정하세요

# 애플리케이션 설정
APP_NAME="SafeWork Pro"
APP_VERSION="1.0.1"
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# 보안 설정 (필수 - 운영환경에서는 강력한 값으로 변경)
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# 데이터베이스 설정 (필수)
DATABASE_HOST=localhost
DATABASE_PORT=5432
POSTGRES_USER=admin
POSTGRES_PASSWORD=safework123
DATABASE_NAME=health_management

# Redis 설정 (필수)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# 디렉토리 설정
STATIC_FILES_DIR=/app/dist
UPLOADS_DIR=/app/uploads
LOGS_DIR=/app/logs
DOCUMENT_DIR=/app/document

# 성능 설정
RATE_LIMIT=100
RATE_LIMIT_WINDOW=60
DB_POOL_SIZE=20
MAX_BATCH_SIZE=100
SLOW_QUERY_THRESHOLD=1.0

# 인증 설정
DISABLE_AUTH=false

# SMTP 설정 (선택사항)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# API 설정
API_BASE_URL=http://localhost:8000/api/v1
FRONTEND_URL=http://localhost:3001

# IP 화이트리스트 (선택사항)
IP_WHITELIST_ENABLED=false
IP_WHITELIST=127.0.0.1,::1,localhost